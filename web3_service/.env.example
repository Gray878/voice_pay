NODE_ENV=development
ENVIRONMENT=testnet
WEB3_SERVICE_HOST=localhost
WEB3_SERVICE_PORT=3001

# 网络选择 (可选: sepolia, base-sepolia, optimism-sepolia, arbitrum-sepolia, bsc-testnet)
# 推荐: base-sepolia (Layer 2, 低成本, Coinbase 生态)
NETWORK=base-sepolia

# 私钥配置
WEB3_SERVICE_PRIVATE_KEY=your_private_key_here
PRIVATE_KEY=your_private_key_here

# ===== 测试网 RPC URLs =====
# Ethereum Sepolia (最稳定，官方测试网)
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
SEPOLIA_CHAIN_ID=11155111

# Base Sepolia (推荐: Layer 2, 低成本, Coinbase 支持)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASE_SEPOLIA_CHAIN_ID=84532

# Optimism Sepolia (Layer 2, 交易成本极低)
OPTIMISM_SEPOLIA_RPC_URL=https://sepolia.optimism.io
OPTIMISM_SEPOLIA_CHAIN_ID=11155420

# Arbitrum Sepolia (Layer 2, 高性能)
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_SEPOLIA_CHAIN_ID=421614

# BSC Testnet (交易速度快, Gas 费低)
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
BSC_TESTNET_CHAIN_ID=97

# Polygon Amoy (Mumbai 已弃用, 使用 Amoy)
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology
POLYGON_AMOY_CHAIN_ID=80002

# Alchemy
ALCHEMY_API_KEY=your-alchemy-api-key-here
ALCHEMY_POLYGON_MUMBAI_RPC=https://polygon-mumbai.g.alchemy.com/v2/YOUR-API-KEY

# Etherscan
ETHERSCAN_API_KEY=your-etherscan-api-key-here
POLYGONSCAN_API_KEY=DQS7F6S3ABUCDVT1MKTPH772R6U53BAVDM
EVM_RPC_URL=https://polygon-bor-rpc.publicnode.com
EVM_RPC_ENDPOINTS=https://polygon-bor-rpc.publicnode.com,https://polygon-rpc.com,https://polygon.blockpi.network/v1/rpc/public
EVM_CHAIN_ID=137

ORDERBOOK_ADDRESS=0x0000000000000000000000000000000000000000
USDOL_ADDRESS=0x0000000000000000000000000000000000000000
INDEX_PATH=./data/index.json
INDEX_FROM_BLOCK=0
COLLECTION_ALLOWLIST=
SYNC_INTERVAL=30000
INDEXER_BATCH_SIZE=500
WHIMLAND_PRIVATE_KEY=
MAX_QTY=5

# Redis (用于会话管理)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Session
SESSION_TTL=600

# Security
API_SECRET_KEY=your-secret-key-here
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Gas
GAS_LIMIT_MULTIPLIER=1.2
