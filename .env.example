# ==================== 环境配置 ====================
NODE_ENV=development  # development | production | test
ENVIRONMENT=testnet   # testnet | mainnet

# ==================== AI 服务配置 ====================

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Whisper ASR
WHISPER_MODEL=whisper-large-v3
WHISPER_DEVICE=cpu  # cpu | cuda

# Pinecone 向量数据库
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=voice-to-pay-products

# AI 服务端口
AI_SERVICE_HOST=localhost
AI_SERVICE_PORT=8000

# ==================== Web3 服务配置 ====================

# Polygon Mumbai 测试网
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_MUMBAI_CHAIN_ID=80001

# Alchemy (可选，更稳定的 RPC)
ALCHEMY_API_KEY=your-alchemy-api-key-here
ALCHEMY_POLYGON_MUMBAI_RPC=https://polygon-mumbai.g.alchemy.com/v2/YOUR-API-KEY

# Etherscan API (用于合约验证)
ETHERSCAN_API_KEY=your-etherscan-api-key-here
POLYGONSCAN_API_KEY=your-polygonscan-api-key-here

# Web3 服务端口
WEB3_SERVICE_HOST=localhost
WEB3_SERVICE_PORT=3000

# ==================== 数据库配置 ====================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=voice_to_pay
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password-here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 会话配置
SESSION_TTL=600  # 会话超时时间（秒），默认 10 分钟

# ==================== 安全配置 ====================

# API 密钥（用于服务间通信）
API_SECRET_KEY=your-secret-key-here

# CORS 配置
CORS_ORIGIN=http://localhost:3000

# ==================== 日志配置 ====================

LOG_LEVEL=info  # debug | info | warning | error
LOG_FILE=logs/app.log

# ==================== 测试配置 ====================

# 测试钱包地址（仅用于测试）
TEST_WALLET_ADDRESS=0x1234567890123456789012345678901234567890
TEST_PRIVATE_KEY=your-test-private-key-here

# ==================== 其他配置 ====================

# 语音识别配置
AUDIO_SAMPLE_RATE=16000
SILENCE_THRESHOLD=2.0  # 静音检测阈值（秒）

# 商品知识库配置
KNOWLEDGE_BASE_UPDATE_INTERVAL=86400  # 更新间隔（秒），默认 24 小时
SEARCH_TOP_K=5  # 搜索返回结果数量

# Gas 配置
GAS_LIMIT_MULTIPLIER=1